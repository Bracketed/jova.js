generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("PRIMARY_DATABASE_URI")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URI")
}

model WebSessions {
  sessionIdentifier String   @id
  sessionToken      String
  sessionTimestamp  DateTime @default(now())
}

model VrfyDeveloperUsers {
  devIdentifier        String @id @default(uuid())
  linkedUserIdentifier String
}

model VrfyUsers {
  userIdentifier    String  @id @default(uuid())
  discordIdentifier String
  robloxIdentifier  String?
  userConfig        Json
}

model VrfyLinkedGuilds {
  guildIdentifier   String @id @default(uuid())
  discordIdentifier String
  guildConfig       Json
}
