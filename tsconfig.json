{
	"extends": "@bracketed/typescript-config/extra-strict",
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"lib": ["ESNext"],
		"target": "ESNext",
		"paths": {
			"#root/*": ["dist/*"]
		},
		"baseUrl": ".",
		"rootDir": "./src",
		"outDir": "./dist",
		"skipLibCheck": true,
		"declaration": false,
		"declarationMap": false,
		"incremental": false,
		"listFiles": true,
		"listEmittedFiles": true,
		"resolveJsonModule": true,
		"typeRoots": ["./src/types"]
	},
	"include": ["src", "src/**/*.json"],
	"exclude": ["dist", "node_modules"]
}
